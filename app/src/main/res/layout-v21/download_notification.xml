<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/realativeNotif"

    android:visibility="visible">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">

            <TextView
                android:layout_width="300dp"
                android:layout_height="22dp"
                android:textSize="16sp"
                android:text="Empty Eyes"
                android:id="@+id/textViewTitleDownloadNotif"
                android:gravity="center"
                android:textColor="#000" />

            <TextView
                android:layout_width="300dp"
                android:layout_height="18dp"
                android:text="Within Temptation"
                android:textSize="14sp"
                android:id="@+id/textViewArtistDownloadNotif"
                android:textColor="#000"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:gravity="center">



            <ProgressBar
                style="@style/ProgressBarTheme"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/progressBarDownloadNotif"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageViewDownloadNotifClose"
        android:layout_gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/vd_delete_gray" />
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageViewDownloadNotif"
        android:layout_gravity="left"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:src="@drawable/vd_download" />

</RelativeLayout>
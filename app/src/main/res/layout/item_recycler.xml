<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    android:id="@+id/recycler_card_view"
    card_view:cardCornerRadius="4dp">



    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        >



        <FrameLayout
            android:layout_width="56dp"
            android:layout_height="79dp"
            android:id="@+id/pressMenuframeLayout"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/pressMenuImageView"
                android:layout_gravity="center"
                android:src="@drawable/vd_download" />

            <com.pnikosis.materialishprogress.ProgressWheel
                xmlns:wheel="http://schemas.android.com/apk/res-auto"
                android:id="@+id/pressMenuProgressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                wheel:matProg_barColor="@color/accentColor"
                wheel:matProg_rimColor="#aaaaaa"
                wheel:matProg_spinSpeed="0.5"
                wheel:matProg_progressIndeterminate="true"
                wheel:matProg_linearProgress="true"
                android:visibility="invisible" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/pressPlayFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:ignore="RtlHardcoded"
            android:layout_marginRight="56dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:id="@+id/song_name"

                android:textSize="16sp"
                android:text="Empty Eyes"

                android:textColor="#1d0d1b"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:id="@+id/band_name"

                android:text="Within Temptation"
                android:textSize="14sp"
                android:layout_marginLeft="16dp"
                android:gravity="bottom"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="20dp" />


        </FrameLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>